<!-- CREATE Modal -->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">新增會員</h4>
</div>
<div class="modal-body">
    <form id="customerCreate" class="form-horizontal">
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreatecustomerEmail'>帳號(電子信箱)</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateCustomerEmail" name="txtCreateCustomerEmail" type="email" placeholder="請輸入E-mail" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateCustomerIdcardno'>身分證字號</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateCustomerIdcardno" name="txtCreateCustomerIdcardno" type="text" placeholder="請輸入身分證字號" pattern="^[A-Z]\d{9}$"
                    class="form-control input-sm" required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateCustomerName'>姓名</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateCustomerName" name="txtCreateCustomerName" type="text" placeholder="請輸入姓名" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateCustomerGender'>性別</label>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtCreateCustomerGender" type="radio" value="0" checked/>女</label>
            </div>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtCreateCustomerGender" type="radio" value="1" />男</label>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for="txtCreateCustomerBirth">出生年月日</label>
            <div class="col-lg-8 has-feedback">
                <div class="input-group form_date" data-date="">
                    <input id="txtCreateCustomerBirth" name="txtCreateCustomerBirth" class="form-control" type="text" data-date-format="yyyy-mm-dd"
                        placeholder="請選擇出生年月日" required="true">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <input type="hidden" id="dtp_input2" value="" />
            <br/>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateCustomerAddrIO'>國內(外)地址</label>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtCreateCustomerAddrIO" type="radio" value="0" checked/>國內</label>
            </div>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtCreateCustomerAddrIO" type="radio" value="1" />國外</label>
            </div>
            <div class="col-lg-offset-3 col-lg-8 has-feedback">
                <input id="txtCreateCustomerAddr" name="txtCreateCustomerAddr" type="text" placeholder="請輸入地址" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateCustomerPhone'>市話</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateCustomerPhone" name="txtCreateCustomerPhone" type="tel" placeholder="格式: 02-1231233" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateCustomerCellphone'>手機</label>
            <div class="col-lg-8">
                <input id="txtCreateCustomerCellphone" name="txtCreateCustomerCellphone" type="tel" placeholder="格式: 0912-333-444" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateCustomerContactName'>聯絡人姓名</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateCustomerContactName" name="txtCreateCustomerContactName" type="text" placeholder="請輸入聯絡人姓名" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateCustomerContactPhone'>聯絡人手機</label>
            <div class="col-lg-8">
                <input id="txtCreateCustomerContactPhone" name="txtCreateCustomerContactPhone" type="tel" placeholder="格式: 0912-333-444" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateCustomerIswork'>是否為會員</label>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtCreateCustomerIswork" type="radio" value="0" checked/>非會員</label>
            </div>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtCreateCustomerIswork" type="radio" value="1" />會員</label>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for="txtCreatecustomerRemark">管理員備註</label>
            <div class="col-lg-8">
                <textarea id="txtCreateCustomerRemark" name="txtCreateCustomerRemark" class="form-control" rows="5"></textarea>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <div class="col-lg-8">
        <div id="creatMsgArea" class="msgArea" style="text-align: left;"></div>
    </div>
    <button id="createCheck" class="btn btn-info" type="submit" form="customerCreate">送出</button>
    <button id="createCancel" class="btn btn-default" type="button" data-dismiss="modal">取消</button>
</div>