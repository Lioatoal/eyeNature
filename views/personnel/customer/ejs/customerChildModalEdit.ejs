<!-- Edit Modal -->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">新增學員</h4>
</div>
<div class="modal-body">
    <form id="customerChildEdit" class="form-horizontal">
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtEditCustomerChildName'>姓名</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtEditCustomerChildName" name="txtEditCustomerChildName" type="text" placeholder="請輸入姓名" class="form-control input-sm"
                    required="true" value="<%= childEdit.name %>" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtEditCustomerChildIdcardno'>身分證字號</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtEditCustomerChildIdcardno" name="txtEditCustomerChildIdcardno" type="text" placeholder="請輸入身分證字號" pattern="^[A-Z]\d{9}$"
                    class="form-control input-sm" required="true" value="<%= childEdit.idcardno %>"  />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtEditCustomerChildPassportno'>護照號碼</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtEditCustomerChildPassportno" name="txtEditCustomerChildPassportno" type="text" placeholder="請輸入護照號碼" 
                    class="form-control input-sm" required="true" value="<%= childEdit.passportno %>" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtEditCustomerChildGender'>性別</label>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtEditCustomerChildGender" type="radio" value="0" checked/>女</label>
            </div>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtEditCustomerChildGender" type="radio" value="1" />男</label>
            </div>
            <script>
                var gender = [<%= childEdit.gender%>];
                if(gender.length){
                    $("input[name=txtEditCustomerChildGender]")[gender[0]].checked = true;
                }
            </script>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtEditCustomerChildReln'>關係人</label>
            <div class="col-lg-8">
                <select id="txtEditCustomerChildReln" name="txtEditCustomerChildReln" class="form-control"></select>
                <script>
                    $("#txtEditCustomerChildReln").html(relationTable2option());
                    $("#txtEditCustomerChildReln").val("<%= childEdit.reln_id%>")
                </script>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for="txtEditCustomerChildBirth">出生年月日</label>
            <div class="col-lg-8 has-feedback">
                <div class="input-group form_date" data-date="">
                    <input id="txtEditCustomerChildBirth" name="txtEditCustomerChildBirth" class="form-control" type="text" data-date-format="yyyy-mm-dd"
                        placeholder="請選擇出生年月日" required="true" value="<%= childEdit.birthday %>" >
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <input type="hidden" id="dtp_input2" value="" />
            <br/>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtEditEmployeeBloodtype'>血型</label>
            <div class="col-lg-8">
                <select id="txtEditCustomerChildBloodtype" name="txtEditEmployeeBloodtype" class="form-control input-sm">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="O">O</option>
                    <option value="AB">AB</option>
                    <option value="Other">其他</option>
                    <option value="Unknow">未知</option>
                </select>
                <script> 
                    var blood =["<%=childEdit.bloodtype %>"]; 
                    if(blood[0]){ 
                        $("#txtEditCustomerChildBloodtype").val(blood)
                    }
                </script>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtEditCustomerChildSchool'>學校</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtEditCustomerChildSchool" name="txtEditCustomerChildSchool" type="text" placeholder="請輸入學校" class="form-control input-sm"
                    required="true" value="<%= childEdit.school %>" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtEditCustomerChildFoodtype'>葷/素</label>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtEditCustomerChildFoodtype" type="radio" value="0" checked/>葷食</label>
            </div>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtEditCustomerChildFoodtype" type="radio" value="1" />全素</label>
            </div>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtEditCustomerChildFoodtype" type="radio" value="2" />蛋奶素</label>
            </div>
            <script>
                var foodtype = [<%= childEdit.foodtype%>];
                if(foodtype.length){
                    $("input[name=txtEditCustomerChildFoodtype]")[foodtype[0]].checked = true;
                }
            </script>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtEditCustomerChildStature'>身高</label>
            <div class="col-lg-8">
                <input id="txtEditCustomerChildStature" name="txtEditCustomerChildStature" type="number" min="0" placeholder="請輸入身高" class="form-control input-sm"
                value="<%= childEdit.stature %>" />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtEditCustomerChildWeight'>體重</label>
            <div class="col-lg-8">
                <input id="txtEditCustomerChildWeight" name="txtEditCustomerChildWeight" type="number" min="0" placeholder="請輸入體重" class="form-control input-sm"
                value="<%= childEdit.weight %>" />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtEditCustomerChildSpacial'>特殊照護</label>
            <div class="col-lg-8">
                <textarea id="txtEditCustomerChildSpacial" name="txtEditCustomerChildSpacial" class="form-control" rows="5" ><%= childEdit.special %></textarea>
            </div>
        </div>

        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtEditCustomerChildNextofkin'>緊急聯絡人姓名</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtEditCustomerChildNextofkin" name="txtEditCustomerChildNextofkin" type="text" placeholder="請輸入聯絡人姓名" class="form-control input-sm"
                    required="true" value="<%= childEdit.nextofkin %>" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtEditCustomerChildNextofkinPhone'>緊急聯絡人手機</label>
            <div class="col-lg-8">
                <input id="txtEditCustomerChildNextofkinPhone" name="txtEditCustomerChildNextofkinPhone" type="tel" placeholder="格式: 0912-333-444" class="form-control input-sm"
                    required="true" value="<%= childEdit.nextofkin_phone %>" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for="txtEditcustomerChildRemark">備註</label>
            <div class="col-lg-8">
                <textarea id="txtEditCustomerChildRemark" name="txtEditCustomerChildRemark" class="form-control" rows="5" ><%= childEdit.remark %></textarea>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <div class="col-lg-8">
        <div id="editChildMsgArea" class="msgArea" style="text-align: left;"></div>
    </div>
    <button id="editChildCheck" class="btn btn-info" type="submit" form="customerChildEdit">送出</button>
    <button id="editChildCancel" class="btn btn-default" type="button" data-dismiss="modal">取消</button>
</div>