<!-- CREATE Modal -->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">新增員工</h4>
</div>
<div class="modal-body">
    <form id="employeeCreate" class="form-horizontal">
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeName'>姓名</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeName" name="txtCreateEmployeeName" type="text" placeholder="請輸入真實姓名" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for="txtCreateEmployeeNickname">綽號</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeNickname" name="txtCreateEmployeeNickname" type="text" placeholder="請輸入綽號" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeTitle'>職稱</label>
            <div class="col-lg-8">
                <select id="txtCreateEmployeeTitle" name="txtCreateEmployeeTitle" class="form-control input-sm">
                    <% for(var i in employeeTitle) {%>
                        <option value="<%= employeeTitle[i].id%>">
                            <%= employeeTitle[i].title%>
                        </option>
                        <% } %>
                </select>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeFacebook'>Facebook</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeFacebook" name="txtCreateEmployeeFacebook" type="text" placeholder="請輸入Fackbook" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeEmail'>E-Mail</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeEmail" name="txtCreateEmployeeEmail" type="email" placeholder="請輸入E-mail" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateEmployeeLine'>Line</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeLine" name="txtCreateEmployeeLine" type="text" placeholder="請輸入Line" class="form-control input-sm"
                />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateEmployeeWechat'>WeChat</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeWechat" name="txtCreateEmployeeWechat" type="text" placeholder="請輸入WeChat" class="form-control input-sm"
                />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for="txtCreateEmployeeBirth">出生年月日</label>
            <div class="col-lg-8 has-feedback">
                <div class="input-group form_date" data-date="">
                    <input id="txtCreateEmployeeBirth" name="txtCreateEmployeeBirth" class="form-control" type="text" data-date-format="yyyy-mm-dd"
                        placeholder="請選擇出生年月日" required="true">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
            <input type="hidden" id="dtp_input2" value="" />
            <br/>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeBloodtype'>血型</label>
            <div class="col-lg-8">
                <select id="txtCreateEmployeeBloodtype" name="txtCreateEmployeeBloodtype" class="form-control input-sm">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="O">O</option>
                    <option value="AB">AB</option>
                    <option value="Other">其他</option>
                    <option value="Unknow">未知</option>
                </select>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeMainPhone'>手機1</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeMainPhone" name="txtCreateEmployeeMainPhone" type="tel" placeholder="格式: 0912-333-444" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateEmployeeSecondaryPhone'>手機2</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeSecondaryPhone" name="txtCreateEmployeeSecondaryPhone" type="tel" placeholder="格式: 0912-333-444"
                    class="form-control input-sm" />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateEmployeeTelePhone'>室內電話</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeTelePhone" name="txtCreateEmployeeTelePhone" type="tel" placeholder="格式: (02)9990-9999" class="form-control input-sm"
                />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateEmployeeAddr'>居住地址</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeAddr" name="txtCreateEmployeeAddr" type="text" placeholder="請輸入地址" class="form-control input-sm"
                />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateEmployeeRegistAddr'>戶籍地址</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeRegistAddr" name="txtCreateEmployeeRegistAddr" type="text" placeholder="請輸入身份證背面詳細地址，包含里/鄰" class="form-control input-sm"
                />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeIdcardno'>身分證字號</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeIdcardno" name="txtCreateEmployeeIdcardno" type="text" placeholder="請輸入身分證字號" pattern="^[A-Z]\d{9}$"
                    class="form-control input-sm" required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeGender'>性別</label>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtCreateEmployeeGender" type="radio" value="0" checked/>女</label>
            </div>
            <div class="col-lg-3 checkbox">
                <label>
                    <input name="txtCreateEmployeeGender" type="radio" value="1" />男</label>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeStature'>身高</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeStature" name="txtCreateEmployeeStature" type="number" min="0" placeholder="請輸入身高" class="form-control input-sm"
                    required="true" />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeWeight'>體重</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeWeight" name="txtCreateEmployeeWeight" type="number" min="0" placeholder="請輸入體重" class="form-control input-sm"
                    required="true" />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeEdu'>學歷</label>
            <div class="col-lg-8">
                <select id="txtCreateEmployeeEdu" name="txtCreateEmployeeEdu" class="form-control input-sm">
                    <% for(var i in employeeEdu) {%>
                        <option value="<%= employeeEdu[i].id%>">
                            <%= employeeEdu[i].edulevel%>
                        </option>
                        <% } %>
                </select>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeSchool'>就讀/畢業學校</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeSchool" name="txtCreateEmployeeSchool" type="text" placeholder="請輸入就讀/畢業學校" class="form-control input-sm"
                    required="true" />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateEmployeeDepartment'>科系所</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeDepartment" name="txtCreateEmployeeDepartment" type="text" placeholder="請輸入就讀/畢業科系所" class="form-control input-sm"
                />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateEmployeeGrade'>年級</label>
            <div class="col-lg-8">
                <select id="txtCreateEmployeeGrade" name="txtCreateEmployeeGrade" class="form-control input-sm">
                    <option value="1">一</option>
                    <option value="2">二</option>
                    <option value="3">三</option>
                    <option value="4">四</option>
                    <option value="5">五</option>
                    <option value="6">六</option>
                    <option value="7">七</option>
                    <option value="8">八</option>
                    <option value="9">九</option>
                </select>
            </div>
            <div class="col-lg-offset-3 col-lg-2 checkbox">
                <label>
                    <input name="txtCreateEmployeeDegreeStatus" type="radio" value="在學" checked/>在學</label>
            </div>
            <div class="col-lg-2 checkbox">
                <label>
                    <input name="txtCreateEmployeeDegreeStatus" type="radio" value="畢業" />畢業</label>
            </div>
            <div class="col-lg-2 checkbox">
                <label>
                    <input name="txtCreateEmployeeDegreeStatus" type="radio" value="肄業" />肄業</label>
            </div>
            <div class="col-lg-2 checkbox">
                <label>
                    <input name="txtCreateEmployeeDegreeStatus" type="radio" value="休學" />休學</label>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateEmployeeSecondaryEdu'>次高學歷</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeSecondaryEdu" name="txtCreateEmployeeSecondaryEdu" type="text" placeholder="請輸入次高學歷：學歷/學校/系所"
                    class="form-control input-sm" />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeNextofkin'>緊急聯絡人</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeNextofkin" name="txtCreateEmployeeNextofkin" type="text" placeholder="請輸入緊急聯絡人姓名" class="form-control input-sm"
                    required="true" />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeNextofkinPhone'>緊急聯絡人電話</label>
            <div class="col-lg-8">
                <input id="txtCreateEmployeeNextofkinPhone" name="txtCreateEmployeeNextofkinPhone" type="text" placeholder="請輸入緊急聯絡人電話" class="form-control input-sm"
                    required="true" />
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeBankcode'>銀行代碼</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeBankcode" name="txtCreateEmployeeBankcode" type="text" placeholder="請輸入廠商銀行代碼" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeBankacct'>銀行帳戶</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeBankacct" name="txtCreateEmployeeBankacct" type="text" placeholder="請輸入廠商銀行帳戶" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtCreateEmployeeBankname'>銀行帳戶戶名</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtCreateEmployeeBankname" name="txtCreateEmployeeBankname" type="text" placeholder="請輸入廠商銀行帳戶戶名" class="form-control input-sm"
                    required="true" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for='txtCreateEmployeeIswork'>在職中</label>
            <div class="col-lg-8 checkbox">
                <label>
                    <input id="txtCreateEmployeeIswork" name="txtCreateEmployeeIswork" type="checkbox" value="1" />在職中</label>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for="txtCreateEmployeeRemark">備註</label>
            <div class="col-lg-8">
                <textarea id="txtCreateEmployeeRemark" name="txtCreateEmployeeRemark" class="form-control" rows="5"></textarea>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <div class="col-lg-8">
        <div id="creatMsgArea" class="msgArea" style="text-align: left;"></div>
    </div>
    <button id="createCheck" class="btn btn-info" type="submit" form="employeeCreate">送出</button>
    <button id="createCancel" class="btn btn-default" type="button" data-dismiss="modal">取消</button>
</div>