<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">新增公佈欄</h4>
</div>
<div class="modal-body main">
    <form id="bltnEdit" class="form-horizontal">
        <div class="row form-group">
            <label id="bltnID" class="control-label col-lg-3 required" for='txtEditBltnTheme'>標題:</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtEditBltnTheme" name="txtEditBltnTheme" type="text" placeholder="請輸入標題" class="form-control input-sm"
                    required="true" value="<%= bltnEdit.theme %>" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required">類別:</label>
            <div class="col-lg-8 has-feedback">
                <select id="txtEditBltnModuleName" class="input-sm">
                <% for(var i=0; i< bltnModules.length; i++){%>
                    <% if(bltnModules[i].module_id == bltnEdit.module_id){ %>
                    <option value="<%=bltnModules[i].module_id%>" selected><%= bltnModules[i].m_display %></option>
                    <%}else{%>
                    <option value="<%=bltnModules[i].module_id%>" ><%= bltnModules[i].m_display %></option>
                    <%}%>
                <%}%>
                </select>
            </div>
        </div>
        <div class="row form-group">
                <label class="control-label col-lg-3" for='txtEditBltnImportant'>重要性:</label>
                <div class="col-lg-3 checkbox">
                    <label>
                        <input name="txtEditBltnImportant" type="radio" value=1 />限期</label>
                </div>
                <div class="col-lg-3 checkbox">
                    <label>
                        <input name="txtEditBltnImportant" type="radio" value=2 />重要</label>
                </div>
                <div class="col-lg-3 checkbox">
                    <label>
                        <input name="txtEditBltnImportant" type="radio" value=3 checked />普通</label>
                </div>
                <script>
                    var imptID = [<%= bltnEdit.impt_id%>]
                    $("input[name=txtEditBltnImportant]")[imptID[0]-1].checked = true;
                </script>
        </div>

        <div class="row form-group">
                <label class="control-label col-lg-3" for='txtEditBltnPublish'>是否發布:</label>
                <div class="col-lg-3 checkbox">
                    <label>
                        <input name="txtEditBltnPublish" type="radio" value=0 checked/>否</label>
                </div>
                <div class="col-lg-3 checkbox">
                    <label>
                        <input name="txtEditBltnPublish" type="radio" value=1 />是</label>
                </div>
                <script>
                    $("input[name=txtEditBltnPublish]")[<%=bltnEdit.active%>].checked = true;
                </script>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3 required" for='txtEditBltnCount'>閱讀秒數</label>
            <div class="col-lg-8 has-feedback">
                <input id="txtEditBltnCount" name="txtEditBltnCount" type="number" min=0 max=120 placeholder="請輸入秒數，最多120秒" class="form-control input-sm"
                    required="true" value="<%= bltnEdit.timecount %>" />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>

        <div class="row form-group">
            <label class="control-label col-lg-3 required" for="txtEditBltnDeadline">截止時間</label>
            <div class="col-lg-8 has-feedback">
                <div class="input-group form_date" data-date="">
                    <input id="txtEditBltnDeadline" name="txtEditBltnDeadline" class="form-control" type="text" data-date-format="yyyy-mm-dd hh"
                        placeholder="請選擇截止時間" required="true" value="<%= bltnEdit.deadline %>" >
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
            <input type="hidden" id="dtp_input2" value="" />
            <br/>
        </div>
        <div class="row form-group">
            <label class="control-label col-lg-3" for="txtEditBltnContent">內容</label>
            <div class="col-lg-8">
                <textarea id="txtEditBltnContent" name="txtEditBltnContent" class="form-control" row=10 ></textarea>
            </div>
        </div>
        <div id="txtBltnWilllook" class="row form-group"></div>
    </form>
</div>
<div class="modal-footer">
    <div class="col-lg-8">
        <div id="editMsgArea" class="msgArea" style="text-align: left;"></div>
    </div>
    <button id="editCheck" class="btn btn-info" type="submit" form="bltnEdit">送出</button>
    <button id="editCancel" class="btn btn-default" type="button" data-dismiss="modal">取消</button>
</div>

<script>
    var contentVal= [<%- JSON.stringify(bltnEdit.content) %>];
</script>
