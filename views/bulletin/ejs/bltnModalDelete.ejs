<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body main">
    <form id="bltnDelete" class="form-horizontal">
        <div class="row R1">
                <div class="col-md-12">
                    <h2><%= viewData.theme %></h2>
                </div>
            </div>
            <div class="row R2">
                <div class="col-md-2 R2C1"><span><%= viewData.m_display %></span></div>
                <div class="col-md-4 R2C2"><span>發布時間: <%= viewData.postdate %></span></div>
                <div class="col-md-1 col-md-offset-1 text-center">
                </div>
                <div class="col-md-1 text-center">
                </div>
                <div class="col-md-1 R2C5"><img src="<%= viewData.imgr %>" class="img-circle" /></div>
                <div class="col-md-2 R2C6"><span><%= viewData.name %> </span></div>
            </div>
            <hr/>
            <div class="row R3">
                <div id="content" class="col-md-12 R3C1"><%- viewData.content %></div>
            </div>
    </form>
</div>
<div class="modal-footer">
    <div class="col-lg-8">
        <div id="delMsgArea" class="msgArea" style="text-align: left;"></div>
    </div>
    <button id="delSubmit" class="btn btn-info" type="submit" form="bltnDelete" >刪除</button>
    <button id="delCancel" class="btn btn-default" type="button" data-dismiss="modal">取消</button>
</div>

